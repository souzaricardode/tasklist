@model TaskList.Model.Dto.TarefaDto
@using TaskList.Model.Resources

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br/>
    <br />
    <br />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="form-group required col-md-12">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-actions no-color text-right">
        <a href="@Url.Action("Index")" class="btn btn-default">@ResourceComponentes.BOTAO_VOLTAR_PARA_LISTAGEM </a>
        @Html.SubmitButton(@ResourceComponentes.BOTAO_SUBMIT_SALVAR)
    </div>
}
